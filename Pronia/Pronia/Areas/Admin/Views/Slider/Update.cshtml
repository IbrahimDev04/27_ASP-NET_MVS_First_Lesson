@model UpdateSliderVM

<form method="post">
    <div class="mb-3">
        <label asp-for="Title">Title</label>
        <input asp-for="Title" type="text" class="form-control" name="Title">
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="SubTitle">SubTitle</label>
        <input asp-for="SubTitle" type="text" class="form-control" name="SubTitle">
        <span asp-validation-for="SubTitle" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Discount">Discount</label>
        <input asp-for="Discount" type="number" class="form-control" name="Discount">
        <span asp-validation-for="Discount" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="ImageUrl">ImageUrl</label>
        <input asp-for="ImageUrl" type="text" class="form-control" name="ImageUrl">
        <span asp-validation-for="ImageUrl" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>